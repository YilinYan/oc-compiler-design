#include "oclib.h"

#define SIZE 100
#define LOWPRIME 2

int main() {
   int prime = LOWPRIME;
   int index = LOWPRIME;
   string[] sieve = new string[SIZE];

   while (index < SIZE) {
      sieve[index] = true;
      index = index + 1;
   }

   while (prime < SIZE) {
      if (sieve[prime]) {
         index = prime * 2;
         while (index < SIZE) {
            sieve[index] = false;
            index = index + prime;
         }
      }
      prime = prime + 1;
   }

   index = LOWPRIME;
   while (index < SIZE) {
      if (sieve[index]) {
         putint (index);
         putchar ('\n');
      }
      index = index + 1;
   }

   return 0;
}

